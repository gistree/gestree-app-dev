<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/my_scroll_view">
    <LinearLayout
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:id="@+id/lastTreeAdded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:background="@color/colorPrimaryDark"
                android:textColor="@android:color/white"
                android:padding="8dp"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text="Última árvore adicionada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="8dp"
                android:layout_marginTop="40dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textAlignment="center"
                    android:text="ID: 124"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textAlignment="center"
                    android:text="Data: 24/12/2018"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="8dp"
                android:layout_marginTop="80dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textAlignment="center"
                    android:text="Zona: C"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textAlignment="center"
                    android:text="Hora: 15:45"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_marginRight="1.5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="130dp">
                <TextView
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@android:color/white"
                    android:padding="8dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:text="Por sync"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <GridLayout
                    android:columnCount="2"
                    android:rowCount="1"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:adjustViewBounds="true"
                        android:layout_column="1"
                        android:layout_row="0"
                        android:id="@+id/card_tree_imageview"
                        android:src="@drawable/card_tree"
                        android:layout_columnWeight="1"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="fill" />
                    <TextView
                        android:textAlignment="center"
                        android:textSize="45sp"
                        android:text="48"
                        android:layout_column="0"
                        android:layout_row="0"
                        android:layout_width="wrap_content"
                        android:layout_gravity="fill"
                        android:layout_columnWeight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center" />
                </GridLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1.25"
                android:layout_height="130dp">
                <TextView
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@android:color/white"
                    android:padding="8dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:text="Última sync"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:padding="8dp"
                    android:layout_marginTop="40dp"
                    android:textAlignment="center"
                    android:text="Hora: 14:22"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:padding="8dp"
                    android:layout_marginTop="80dp"
                    android:textAlignment="center"
                    android:text="Data: 14/11/2018"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <android.support.v7.widget.CardView
            android:id="@+id/cardTotalSyncd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:background="@color/colorPrimaryDark"
                android:textColor="@android:color/white"
                android:padding="8dp"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text="Total de árvores sincronizadas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="8dp"
                android:layout_marginTop="40dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textAlignment="center"
                    android:text="ID: 124"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textAlignment="center"
                    android:text="Data: 24/12/2018"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="8dp"
                android:layout_marginTop="80dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textAlignment="center"
                    android:text="Zona: C"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textAlignment="center"
                    android:text="Hora: 15:45"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>