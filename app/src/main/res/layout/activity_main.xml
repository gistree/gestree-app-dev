<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gistree.db_con.MainActivity_old">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="id_tree"
        android:ems="10"
        android:layout_marginLeft="20dp"
        android:id="@+id/editText_inserir_id_tree"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="species"
        android:ems="10"
        android:layout_marginTop="50dp"
        android:id="@+id/editText_inserir_species"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_marginTop="200dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_truncate">
    </ListView>

    <Button
        android:text="Echo Do Servidor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btEcho"
        android:layout_below="@+id/editText_inserir_species"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Enviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buttonSendClicked"
        android:id="@+id/btEnviar"
        android:layout_below="@+id/btEcho"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Trincar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="truncateTableLog"
        android:id="@+id/button_truncate"
        android:layout_below="@+id/btEcho"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Enviar Teste"
        android:layout_height="wrap_content"
        android:id="@+id/btTeste"
        android:layout_width="wrap_content"
        android:layout_below="@+id/btEcho"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
